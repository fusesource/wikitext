<?xml version="1.0" encoding="UTF-8"?>
<project name="testsuite" default="eclipse" basedir=".">
  <!-- The property ${eclipse-home} should be passed into this script -->
  <!-- Set a meaningful default value for when it is not. -->
  <property name="eclipse-home" value="${basedir}/../.."/>

  <!-- sets the properties eclipse-home, and library-file -->
  <fail message="required property 'plugin-name' not set" unless="plugin-name"/>
  <fail message="required property 'classname' not set" unless="classname"/>

  <property name="library-file"
            value="${eclipse-home}/plugins/org.eclipse.test/library.xml"/>
  <property name="timeout"
            value="7200000"/>

  <!-- This target holds all initialization code that needs to be done for -->
  <!-- all tests that are to be run. Initialization for individual tests -->
  <!-- should be done within the body of the suite target. -->
  <target name="init">
    <tstamp/>
    <delete>
      <fileset dir="${eclipse-home}" includes="org*.xml"/>
    </delete>
  </target>

  <!-- This target defines the tests that need to be run. -->
  <target name="suite">
    <property name="workspace" value="${eclipse-home}/test-workspace"/>
    <delete dir="${workspace}" quiet="true"/>
    <ant target="ui-test" antfile="${library-file}" dir="${eclipse-home}">
      <property name="data-dir" value="${workspace}"/>
      <property name="plugin-name" value="${plugin-name}"/>
      <property name="classname" value="${classname}"/>
      <property name="timeout" value="${timeout}"/>
    </ant>
  </target>
  
  <!-- This target holds code to cleanup the testing environment after -->
  <!-- after all of the tests have been run. You can use this target to -->
  <!-- delete temporary files that have been created. -->
  <target name="cleanup">
  </target>

  <!-- This target runs the test suite. Any actions that need to happen -->
  <!-- after all the tests have been run should go here. -->
  <target name="eclipse" depends="init,suite,cleanup">
    <ant target="collect" antfile="${library-file}" dir="${eclipse-home}">
      <property name="includes" value="*test*.xml"/>
      <property name="output-file" value="${plugin-name}.xml"/>
    </ant>
  </target>

  <!-- performance test target -->
  <target name="performance-suite">
    <property name="plugin-name" value="${plugin-name}"/>
    <property name="workspace" value="${eclipse-home}/test-workspace"/>
    <delete dir="${workspace}" quiet="true"/>
    <ant target="ui-test" antfile="${library-file}" dir="${eclipse-home}">
      <property name="data-dir" value="${workspace}"/>
      <property name="plugin-name" value="${plugin-name}"/>
      <property name="classname" value="${classname}"/>
      <property name="timeout" value="${timeout}"/>
    </ant>
  </target>
		
  <!-- This target runs the performance test suites. -->
  <target name="performance" depends="init,performance-suite,cleanup">
    <ant target="collect" antfile="${library-file}" dir="${eclipse-home}">
      <property name="includes" value="*test*.xml"/>
      <property name="output-file" value="${plugin-name}.xml"/>
      <property name="timeout" value="${timeout}"/>
    </ant>
  </target>
	
  <!-- swtbot test target -->
  <target name="swtbot-suite">
    <property name="plugin-name" value="${plugin-name}"/>
    <property name="workspace" value="${eclipse-home}/test-workspace"/>
    <delete dir="${workspace}" quiet="true"/>
      
    <ant target="swtbot-test" antfile="${swtbot-library-file}" dir="${eclipse-home}">
      <property name="data-dir" value="${workspace}" />
      <property name="plugin-name" value="${plugin-name}" />
      <property name="classname" value="${classname}" />
      <property name="vmargs" value=" -Xms128M -Xmx368M -XX:MaxPermSize=256M" />
      <property name="timeout" value="${timeout}"/>
    </ant>
  </target>

  <!-- This target runs the swtbot test suites. -->
  <target name="swtbot" depends="init,swtbot-suite,cleanup">
    <ant target="collect" antfile="${library-file}" dir="${eclipse-home}">
      <property name="includes" value="*test*.xml"/>
      <property name="output-file" value="${plugin-name}.xml"/>
    </ant>
  </target>		

</project>
