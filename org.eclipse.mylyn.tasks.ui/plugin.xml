           icon="icons/etool16/task.gif"
           id="org.eclipse.mylar.tasklist.ui.taskEditor"
           name="Task Editor"/>
	    <editor
           icon="icons/etool16/task.gif"
           class="org.eclipse.mylar.internal.tasks.ui.editors.CategoryEditor"
           name="Category Editor"
           id="org.eclipse.mylar.tasklist.ui.catEditor"/>
