<plugin>
   <extension-point id="connectors" name="Build Connectors" schema="schema/connectors.exsd"/>

   <extension
         point="org.eclipse.ui.views">
      <view
            name="Builds"
            icon="icons/eview16/build-view.png"
            class="org.eclipse.mylyn.internal.builds.ui.view.BuildsView"
            id="org.eclipse.mylyn.builds.navigator.builds">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.ui.resourcePerspective">
         <view
               id="org.eclipse.mylyn.builds.navigator.builds"
               ratio="0.5"
               relationship="stack"
               relative="org.eclipse.ui.navigator.ProjectExplorer">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.mylyn.tasks.ui.repositories">
      <connectorCore
            class="org.eclipse.mylyn.internal.builds.core.tasks.BuildTaskConnector"
            id="org.eclpise.mylyn.builds"
            name="Continuous Integration">
      </connectorCore>
      <connectorUi
            brandingIcon="icons/eview16/build-view.png"
            class="org.eclipse.mylyn.internal.builds.ui.tasks.BuildTaskConnectorUi"
            id="org.eclpise.mylyn.builds"
            name="Continuous Integration">
      </connectorUi>
   </extension>
    <extension point="org.eclipse.ui.preferencePages">
		<page name="Builds"
			class="org.eclipse.mylyn.internal.builds.ui.BuildsPreferencesPage"
			id="org.eclipse.mylyn.builds.preferences.BuildsPage">
	    	<keywordReference id="org.eclipse.mylyn.builds.preferences.keywords"/>
		</page>
    </extension>
	<extension point="org.eclipse.ui.keywords">
	    <keyword
	          id="org.eclipse.mylyn.builds.preferences"
	          label="interval polling build status">
	    </keyword>
	</extension>
 <extension
       point="org.eclipse.core.runtime.preferences">
    <initializer
          class="org.eclipse.mylyn.internal.builds.ui.BuildsPreferencesInitializer">
    </initializer>
 </extension>
 <extension
       point="org.eclipse.ui.navigator.navigatorContent">
    <navigatorContent
          contentProvider="org.eclipse.mylyn.internal.builds.ui.view.BuildContentProvider"
          icon="icons/eview16/build-view.png"
          id="org.eclipse.mylyn.builds.ui.navigator.BuildRepositories"
          labelProvider="org.eclipse.mylyn.internal.builds.ui.view.BuildLabelProvider"
          name="Build Repositories">
       <possibleChildren>
          <instanceof
                value="org.eclipse.mylyn.builds.core.IBuildElement">
          </instanceof>
       </possibleChildren>
       <triggerPoints>
          <instanceof
                value="org.eclipse.mylyn.internal.commons.team.navigator.RepositoryModel">
          </instanceof>
       </triggerPoints>
    </navigatorContent>
 </extension>
 <extension
       point="org.eclipse.ui.navigator.viewer">
    <viewerContentBinding
          viewerId="org.eclipse.mylyn.commons.team.navigator.Repositories">
       <includes>
          <contentExtension
                isRoot="true"
                pattern="org.eclipse.mylyn.builds.ui.navigator.BuildRepositories">
          </contentExtension>
       </includes>
    </viewerContentBinding>
 </extension>
 <extension
       point="org.eclipse.ui.handlers">
      <handler
            class="org.eclipse.mylyn.internal.builds.ui.commands.BuildElementPropertiesHandler"
            commandId="org.eclipse.ui.file.properties">
         <activeWhen>
			<with variable="activePartId">
			    <equals value="org.eclipse.mylyn.builds.navigator.builds"/>
			</with> 
         </activeWhen>
         <enabledWhen>
            <and>
               <count
                     value="1">
               </count>
               <iterate>
                  <and>
                     <instanceof
                           value="org.eclipse.mylyn.builds.core.IBuildElement">
                     </instanceof>
                  </and>
               </iterate>
            </and>
         </enabledWhen>
      </handler>
 </extension>
</plugin>
