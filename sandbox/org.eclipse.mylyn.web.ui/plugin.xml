<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.0"?>
<plugin>
<extension
         point="org.eclipse.mylar.core.context">
      <structureBridge
            class="org.eclipse.mylar.internal.web.WebResourceStructureBridge"
            name="Web Resource Structure Bridge"/>
   </extension> 
   <extension
         point="org.eclipse.mylar.ui.context">
      <uiBridge
            class="org.eclipse.mylar.internal.web.ui.WebResourceUiBridge"
            contentType="http"
            id="org.eclipse.mylar.web.uiBridge"/>
   </extension>

  	<extension point = "org.eclipse.ui.popupMenus">
     <objectContribution
        id="org.eclipse.mylar.ui.interest"
        objectClass="org.eclipse.mylar.internal.web.WebResource">
     	<action  
  		  	label="Mylar: Make Less Interesting" 
	  		tooltip="Mark selected element as uninteresting"
	  		menubarPath="mylar" 
	  		id="org.eclipse.mylar.ui.actions.InterestDecrementAction" 
	  		class="org.eclipse.mylar.internal.ui.actions.InterestDecrementAction"
	  		icon="icons/elcl16/interest-decrease.gif"
	  		enablesFor="*"/>
	    <action  
  		  	label="Mylar: Mark as Landmark" 
	  		tooltip="Make selected element a landmark"
	  		menubarPath="mylar" 
	  		id="org.eclipse.mylar.ui.actions.InterestIncrementAction" 
	  		class="org.eclipse.mylar.internal.ui.actions.InterestIncrementAction"
	  		icon="icons/elcl16/interest-increase.gif"
	  		enablesFor="*"/>
	 </objectContribution>
   </extension>

<extension point="org.eclipse.ui.actionSets">
	<actionSet
            id="org.eclipse.mylar.web.actionSet"
            label="Mylar Web"
            visible="true"> 
  		<action
          class="org.eclipse.mylar.internal.web.ui.NewWebBrowserAction"
          definitionId="org.eclipse.mylar.web.browser.new"
          icon="icons/etool16/browser-new.gif" 
          id="org.eclipse.mylar.browser.editor.new"
          label="New Browser"
          style="push"
          toolbarPath="org.eclipse.ui.edit.text.actionSet.presentation/Presentation"
          tooltip="New Browser"> 
      	</action> 
    </actionSet>
   </extension>

   <extension point="org.eclipse.ui.commands">
	  <command
         categoryId="org.eclipse.mylar.ui"
         description="Toggle Automatic Folding"
         id="org.eclipse.mylar.web.browser.new"
         name="New Browser">
      </command>
   </extension>

   <extension point="org.eclipse.ui.bindings">   
	  <key
            sequence="M1+M2+M3+T"
            contextId="org.eclipse.ui.globalScope"
            commandId="org.eclipse.mylar.web.browser.new"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>

   <!-- ================================================================================ -->
   <!-- Common Navigator viewer for use in the Project Explorer							 -->
   <!-- ================================================================================ -->
   <extension
         point="org.eclipse.ui.navigator.navigatorContent">
      <navigatorContent
            activeByDefault="true"
            contentProvider="org.eclipse.mylar.internal.web.WebResourceContentProvider"
            icon="icons/obj16/web-root.gif"
            id="org.eclipse.mylar.web.navigator"
            labelProvider="org.eclipse.mylar.internal.web.ui.WebSiteNavigatorLabelProvider"
            name="Mylar Web Context (Experimental)">
         <triggerPoints>
            <or> 
            	<instanceof value="org.eclipse.core.resources.IWorkspaceRoot"/>
            	<instanceof value="org.eclipse.mylar.internal.web.WebResource"/>
            </or>
         </triggerPoints>
         <possibleChildren>
            <instanceof value="org.eclipse.mylar.internal.web.WebResource"/>
         </possibleChildren>
        
        <!--
         <override
               policy="InvokeAlwaysRegardlessOfSuppressedExt"
               suppressedExtensionId="org.eclipse.ui.navigator.resourceContent"/>
        -->
         <actionProvider
               class="org.eclipse.mylar.internal.web.ui.WebSiteNavigatorActionProvider"
               id="org.eclipse.mylar.web.actionProvider">
              <enablement>
				<or>
					<adapt type="org.eclipse.mylar.internal.web.WebSite"/> 	
					<adapt type="org.eclipse.mylar.internal.web.WebPage"/> 	
				</or>
			</enablement>
		 </actionProvider>
		 
		 
		<commonSorter
              class="org.eclipse.mylar.provisional.ui.InterestSorter"
              id="org.eclipse.mylar.web.sorter.interest">
           <parentExpression>
           		  <or>           
		            <instanceof value="org.eclipse.mylar.internal.web.WebResource" /> 
		         </or>
		   </parentExpression>
        </commonSorter>
		 
      </navigatorContent>
      
   </extension>
      <extension
         point="org.eclipse.ui.navigator.viewer">
      <viewerContentBinding viewerId="org.eclipse.ui.navigator.ProjectExplorer">
         <includes>
            <contentExtension
                  pattern="org.eclipse.mylar.web.navigator"/>
         </includes>
      </viewerContentBinding>
   </extension>
