<?xml version="1.0" encoding="UTF-8"?>
<project name="org.eclipse.mylar.zest.core" default="build.jars" basedir=".">

	<property name="basews" value="${ws}"/>
	<property name="baseos" value="${os}"/>
	<property name="basearch" value="${arch}"/>
	<property name="basenl" value="${nl}"/>

	<!-- Compiler settings. -->
	<property name="javacFailOnError" value="false"/>
	<property name="javacDebugInfo" value="on"/>
	<property name="javacVerbose" value="false"/>
	<property name="logExtension" value=".log"/>
	<property name="compilerArg" value=""/>
	<property name="javacSource" value="1.3"/>
	<property name="javacTarget" value="1.2"/>
	<path id="path_bootclasspath">
		<fileset dir="${java.home}/lib">
			<include name="*.jar"/>
		</fileset>
	</path>
	<property name="bootclasspath" refid="path_bootclasspath"/>
	<property name="bundleJavacSource" value="${javacSource}"/>
	<property name="bundleJavacTarget" value="${javacTarget}"/>
	<property name="bundleBootClasspath" value="${bootclasspath}"/>

	<target name="init" depends="properties">
		<condition property="pluginTemp" value="${buildTempFolder}/plugins">
			<isset property="buildTempFolder"/>
		</condition>
		<property name="pluginTemp" value="${basedir}"/>
		<condition property="build.result.folder" value="${pluginTemp}/org.eclipse.mylar.zest.core">
			<isset property="buildTempFolder"/>
		</condition>
		<property name="build.result.folder" value="${basedir}"/>
		<property name="temp.folder" value="${basedir}/temp.folder"/>
		<property name="plugin.destination" value="${basedir}"/>
	</target>

	<target name="properties" if="eclipse.running">
		<property name="build.compiler" value="org.eclipse.jdt.core.JDTCompilerAdapter"/>

	</target>

	<target name="build.update.jar" depends="init" description="Build the plug-in: org.eclipse.mylar.zest.core for an update site.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<zip destfile="${plugin.destination}/org.eclipse.mylar.zest.core_0.3.1.jar" basedir="${temp.folder}/org.eclipse.mylar.zest.core_0.3.1" filesonly="false" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="@dot" depends="init" unless="@dot" description="Create jar: org.eclipse.mylar.zest.core @dot.">
		<delete dir="${temp.folder}/@dot.bin"/>
		<mkdir dir="${temp.folder}/@dot.bin"/>
		<path id="@dot.classpath">
			<pathelement path="../../../../../eclipse/eclipse/plugins/com.ibm.icu_3.4.3.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.ui_3.2.0.I20060413-1200.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.runtime_3.2.0.v20060412-2000.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.runtime.compatibility.registry_3.2.0.v20060411/runtime_registry_compatibility.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.runtime.compatibility.registry_3.2.0.v20060411/@dot"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.equinox.registry_3.2.0.v20060411.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.osgi_3.2.0.v20060413-1200.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.jobs_3.2.0.v20060411.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.equinox.common_3.2.0.v20060411.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.equinox.preferences_3.2.0.v20060412-1700.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.contenttype_3.2.0.v20060411.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.runtime.compatibility.auth_3.2.0.v20060413-1200.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.swt_3.2.0.v3230b.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.swt.win32.win32.x86_3.2.0.v3230.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.jface_3.2.0.I20060413-1200.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.commands_3.2.0.I20060412-2000.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.ui.workbench_3.2.0.I20060413-1200.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.ui.workbench.compatibility_3.2.0.I20060207-0800/@dot"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.ui.workbench.compatibility_3.2.0.I20060207-0800/compatibility.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.help_3.2.0.v20060412.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.expressions_3.2.0.v20060412-1600.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.resources_3.2.0.v20060411.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.resources.compatibility_3.2.0.v20060411.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.resources.win32_3.2.0.v20060413.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.runtime.compatibility_3.1.100.v20060413-1200.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.update.configurator_3.1.100.v20060412.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.ant.core_3.1.100.v20060412.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.variables_3.1.100.v20060411.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.filesystem_1.0.0.v20060411.jar"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.core.filesystem.win32.x86_1.0.0.v20051114.jar"/>
			<pathelement path="${build.result.folder}/../org.eclipse.mylar.zest.layouts/bin/"/>
			<pathelement path="${build.result.folder}/../org.eclipse.mylar.zest.layouts/@dot"/>
			<pathelement path="${build.result.folder}/../org.eclipse.gef/bin"/>
			<pathelement path="${build.result.folder}/../org.eclipse.gef/@dot"/>
			<pathelement path="${build.result.folder}/../org.eclipse.draw2d/bin"/>
			<pathelement path="${build.result.folder}/../org.eclipse.draw2d/@dot"/>
			<pathelement path="../../../../../eclipse/eclipse/plugins/org.eclipse.ui.views_3.2.0.I20060413-1200.jar"/>
		</path>
		<!-- compile the source code -->
		<javac destdir="${temp.folder}/@dot.bin" failonerror="${javacFailOnError}" verbose="${javacVerbose}" debug="${javacDebugInfo}" includeAntRuntime="no" bootclasspath="${bundleBootClasspath}" source="${bundleJavacSource}" target="${bundleJavacTarget}"		>
			<compilerarg line="${compilerArg}"/>
			<classpath refid="@dot.classpath" />
			<src path="src/"			/>
			<compilerarg value="@${basedir}/javaCompiler...args" compiler="org.eclipse.jdt.core.JDTCompilerAdapter"/>
			<compilerarg line="-log '${temp.folder}/@dot.bin${logExtension}'" compiler="org.eclipse.jdt.core.JDTCompilerAdapter"/>
		</javac>
		<!-- Copy necessary resources -->
		<copy todir="${temp.folder}/@dot.bin" failonerror="true" overwrite="false">
			<fileset dir="src/" excludes="**/*.java, **/package.htm*"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<copy todir="${build.result.folder}/@dot" failonerror="true" overwrite="false">
			<fileset dir="${temp.folder}/@dot.bin"			/>
		</copy>
		<delete dir="${temp.folder}/@dot.bin"/>
	</target>

	<target name="src.zip" depends="init" unless="src.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip destfile="${build.result.folder}/src.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: org.eclipse.mylar.zest.core.">
		<available property="@dot" file="${build.result.folder}/@dot"/>
		<antcall target="@dot"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="src.zip" file="${build.result.folder}/src.zip"/>
		<antcall target="src.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.eclipse.mylar.zest.core_0.3.1"/>
		<copy todir="${destination.temp.folder}/org.eclipse.mylar.zest.core_0.3.1" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}/@dot" includes="**"			/>
		</copy>
		<copy todir="${destination.temp.folder}/org.eclipse.mylar.zest.core_0.3.1" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="plugin.xml,META-INF/,bin/"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.eclipse.mylar.zest.core_0.3.1"/>
		<copy file="${build.result.folder}/src.zip" todir="${destination.temp.folder}/org.eclipse.mylar.zest.core_0.3.1" failonerror="false" overwrite="false"/>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/org.eclipse.mylar.zest.core_0.3.1"/>
		<copy file="${temp.folder}/@dot.bin${logExtension}" todir="${destination.temp.folder}/org.eclipse.mylar.zest.core_0.3.1" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: org.eclipse.mylar.zest.core of all the zips, jars and logs created.">
		<delete dir="${build.result.folder}/@dot"/>
		<delete file="${build.result.folder}/src.zip"/>
		<delete file="${plugin.destination}/org.eclipse.mylar.zest.core_0.3.1.jar"/>
		<delete file="${plugin.destination}/org.eclipse.mylar.zest.core_0.3.1.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="C:/Documents and Settings/irbull/eclipse/zest/org.eclipse.mylar.zest.core" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: org.eclipse.mylar.zest.core.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin${logExtension}"			/>
		</delete>
		<zip destfile="${plugin.destination}/org.eclipse.mylar.zest.core_0.3.1.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

</project>
