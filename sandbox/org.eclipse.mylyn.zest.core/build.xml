	<target name="ca.uvic.cs.zestsrc.zip" depends="init" unless="ca.uvic.cs.zestsrc.zip">
		<mkdir dir="${build.result.folder}"/>
		<zip destfile="${build.result.folder}/ca.uvic.cs.zestsrc.zip" filesonly="false" whenempty="skip" update="false">
			<fileset dir="src/" includes="**/*.java"			/>
			<fileset dir="icons/" includes="**/*.java"			/>
		</zip>
	</target>

	<target name="build.jars" depends="init" description="Build all the jars for the plug-in: ca.uvic.cs.zest.">
		<available property="ca.uvic.cs.zest.jar" file="${build.result.folder}/ca.uvic.cs.zest.jar"/>
		<antcall target="ca.uvic.cs.zest.jar"/>
	</target>

	<target name="build.sources" depends="init">
		<available property="ca.uvic.cs.zestsrc.zip" file="${build.result.folder}/ca.uvic.cs.zestsrc.zip"/>
		<antcall target="ca.uvic.cs.zestsrc.zip"/>
	</target>

	<target name="gather.bin.parts" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/ca.uvic.cs.zest_1.0.0"/>
		<copy todir="${destination.temp.folder}/ca.uvic.cs.zest_1.0.0" failonerror="true" overwrite="false">
			<fileset dir="${build.result.folder}" includes="ca.uvic.cs.zest.jar"			/>
		</copy>
		<copy todir="${destination.temp.folder}/ca.uvic.cs.zest_1.0.0" failonerror="true" overwrite="false">
			<fileset dir="${basedir}" includes="META-INF/,bin/,icons/,plugin.xml,templates/,ca.uvic.cs.zest.jar"			/>
		</copy>
	</target>

	<target name="build.zips" depends="init">
	</target>

	<target name="gather.sources" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/ca.uvic.cs.zest_1.0.0"/>
		<copy file="${build.result.folder}/ca.uvic.cs.zestsrc.zip" todir="${destination.temp.folder}/ca.uvic.cs.zest_1.0.0" failonerror="false" overwrite="false"/>
		<copy todir="${destination.temp.folder}/ca.uvic.cs.zest_1.0.0" failonerror="false" overwrite="false">
			<fileset dir="${basedir}" includes="META-INF/,src/,icons/,templateSource/,plugin.xml,templates/"			/>
		</copy>
	</target>

	<target name="gather.logs" depends="init" if="destination.temp.folder">
		<mkdir dir="${destination.temp.folder}/ca.uvic.cs.zest_1.0.0"/>
		<copy file="${temp.folder}/ca.uvic.cs.zest.jar.bin.log" todir="${destination.temp.folder}/ca.uvic.cs.zest_1.0.0" failonerror="false" overwrite="false"/>
	</target>

	<target name="clean" depends="init" description="Clean the plug-in: ca.uvic.cs.zest of all the zips, jars and logs created.">
		<delete file="${build.result.folder}/ca.uvic.cs.zest.jar"/>
		<delete file="${build.result.folder}/ca.uvic.cs.zestsrc.zip"/>
		<delete file="${plugin.destination}/ca.uvic.cs.zest_1.0.0.jar"/>
		<delete file="${plugin.destination}/ca.uvic.cs.zest_1.0.0.zip"/>
		<delete dir="${temp.folder}"/>
	</target>

	<target name="refresh" depends="init" if="eclipse.running" description="Refresh this folder.">
		<eclipse.convertPath fileSystemPath="/home/irbull/local/eclipse/plugins/ca.uvic.cs.zest" property="resourcePath"/>
		<eclipse.refreshLocal resource="${resourcePath}" depth="infinite"/>
	</target>

	<target name="zip.plugin" depends="init" description="Create a zip containing all the elements for the plug-in: ca.uvic.cs.zest.">
		<delete dir="${temp.folder}"/>
		<mkdir dir="${temp.folder}"/>
		<antcall target="build.jars"/>
		<antcall target="build.sources"/>
		<antcall target="gather.bin.parts">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<antcall target="gather.sources">
			<param name="destination.temp.folder" value="${temp.folder}/"/>
		</antcall>
		<delete>
			<fileset dir="${temp.folder}" includes="**/*.bin.log"			/>
		</delete>
		<zip destfile="${plugin.destination}/ca.uvic.cs.zest_1.0.0.zip" basedir="${temp.folder}" filesonly="true" whenempty="skip" update="false"/>
		<delete dir="${temp.folder}"/>
	</target>

