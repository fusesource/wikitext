		<copy todir="${temp.folder}/ca.uvic.cs.zest.jar.bin" failonerror="true" overwrite="false">
			<fileset dir="src/" excludes="**/*.java, **/package.htm*,null"			/>
			<fileset dir="icons/" excludes="**/*.java, **/package.htm*,null"			/>
		</copy>
		<mkdir dir="${build.result.folder}"/>
		<jar destfile="${build.result.folder}/ca.uvic.cs.zest.jar" basedir="${temp.folder}/ca.uvic.cs.zest.jar.bin"/>
